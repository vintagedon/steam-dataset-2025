# ========== SECTION 1: CORE CREDENTIALS & SECRETS =====================

# -- Steam Web API (get from https://steamcommunity.com/dev/apikey)
STEAM_API_KEY="YOUR_PRIMARY_STEAM_API_KEY"
STEAM_API_KEY_2="YOUR_SECONDARY_STEAM_API_KEY"   # optional / parallel jobs

# -- PostgreSQL (proj-pgsql01)
PG_HOST=10.25.20.8
PG_PORT=5432

# Administrative credentials (used by setup scripts only; needs superuser/owner rights)
PG_ADMIN_USER=clusteradmin_pg01
PG_ADMIN_PASSWORD="YOUR_SECURE_ADMIN_PASSWORD"

# Application credentials (least-privilege user for imports/analysis)
PG_APP_USER=steam_user
PG_APP_USER_PASSWORD="YOUR_SECURE_APP_USER_PASSWORD"

# Database names (scripts may also accept CLI args)
PG_DB_STEAM5K=steam5k
PG_DB_STEAMFULL=steamfull

# -- Neo4j (proj-neo4j01)
NEO4J_HOST=10.25.20.21
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_ADMIN_USER=neo4j
NEO4J_ADMIN_PASSWORD="YOUR_SECURE_NEO4J_PASSWORD"

# -- Optional Third-Party APIs
OPENAI_API_KEY="your_openai_api_key_here"

# -- Security (use a 64-hex char string: 32 bytes for HMAC-SHA256)
JWT_SECRET="REPLACE_WITH_64_HEX_CHAR_SECRET"

# ========== SECTION 2: APPLICATION & PERFORMANCE TUNING ===============

# General
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:8501,http://10.25.20.8:8501

# Data collection controls
API_DELAY_SECONDS=1.5
API_MAX_RETRIES=3
API_SAVE_BATCH_SIZE=500

# Embeddings / Vector search
# NOTE: If you switch models (e.g., to all-mpnet-base-v2 at 768 dims),
#       update schema vector dimensions accordingly.
EMBEDDING_MODEL_NAME=BAAI/bge-m3
EMBEDDING_BATCH_SIZE=8

# Optional local LLM endpoint
OLLAMA_BASE_URL=http://localhost:11434

# pgvector HNSW index params (tune per hardware/workload)
HNSW_M=16
HNSW_EF_CONSTRUCTION=64
HNSW_EF_SEARCH=100

# Connection pooling (for future API services)
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5
NEO4J_MAX_CONNECTION_POOL_SIZE=100

# SQL logging (verbose; disable in production)
ENABLE_QUERY_LOG=false
